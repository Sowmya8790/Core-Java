package Collections;

import java.util.ArrayList;
import java.util.Collections;

public class ArrayListExample {

	public static void main(String[] args) {
		
		ArrayList<String> list1 = new ArrayList<String>();

		
		list1.add("Sowmya");
		list1.add("Lavanya");
		list1.add("Sowjanya");
		list1.add("Gayatri");
		
		
		System.out.println("List is this : " +list1);
		System.out.println("The size of the list : " +list1.size());
		
		
		list1.remove(2);
		System.out.println("List is this " +list1);
		System.out.println("The size of the list : " +list1.size());
		
		System.out.println("The 1st element in the list : " +list1.get(1));
		
		list1.set(2, "Vyshu");
		System.out.println("The value updated in list :" +list1);
		
		list1.add(2, "Gayatri");
		System.out.println("Bring back deleted :" +list1);
		
		Collections.sort(list1);
		
		System.out.println("After sorting arraylist :"+list1);
		
		list1.sort(Collections.reverseOrder());
		
		System.out.println(list1);
		
		for(int i=0;i<list1.size();i++)
		{
			System.out.println(list1.get(i));
			if(list1.get(i)==Sowjanya)
			{
				
			}
		}
		for(String s:list1)
		{
			System.out.println(s);
		}
		 
		
		
		
		

	}

}
